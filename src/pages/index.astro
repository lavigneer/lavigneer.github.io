---
import { Image } from 'astro:assets'
import Layout from '../layouts/Layout.astro'
import meLargeImage from '../images/me-large.jpg'
---

<Layout title="About Me">
	<main class="relative grow p-12">
		<div class="absolute left-0 top-0 z-0 h-full w-5/12 bg-slate-600"></div>
		<div class="relative z-10 m-auto grid w-9/12 grid-cols-2">
			<div class="flex flex-col items-center bg-slate-300 p-12 drop-shadow-2xl">
				<Image
					class="inline-block h-96 w-96 rounded-full object-cover ring-2 ring-white"
					src={meLargeImage}
					alt="me"
				/>
				<br />
				<h1 class="text-3xl font-extrabold">Eric Lavigne</h1>
				<hr class="border-b border-slate-700 w-7/12 my-6"/>
				<h2 class="text-xl uppercase">Staff Engineer - Team Lead</h2>
			</div>
			<div class="flex flex-col items-center p-12">
				<div class="flex">
					<h1
						class="typing-animation mx-auto my-0 overflow-hidden whitespace-nowrap font-mono text-6xl"
					>
						Hello world!
					</h1>
				</div>
			</div>
		</div>
	</main>
</Layout>

<style>
	/* The typing effect */
	@keyframes typing {
		from {
			width: 0;
		}
		to {
			width: 100%;
		}
	}

	/* The typewriter cursor effect */
	@keyframes blink-caret {
		from,
		to {
			border-color: transparent;
		}
		50% {
			border-color: #a8a29e;
		}
	}

	.typing-animation {
		font-family: monospace;
		border-right-width: 0.15em;
		animation:
			typing 3.5s steps(12, end),
			blink-caret 0.75s step-end infinite;
	}
</style>
